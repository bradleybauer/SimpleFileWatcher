# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_win32
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_win32)
  SimpleFileWatcher_config = debug_win32
  SimpleDemo_config = debug_win32
endif
ifeq ($(config),debug_x64)
  SimpleFileWatcher_config = debug_x64
  SimpleDemo_config = debug_x64
endif
ifeq ($(config),release_win32)
  SimpleFileWatcher_config = release_win32
  SimpleDemo_config = release_win32
endif
ifeq ($(config),release_x64)
  SimpleFileWatcher_config = release_x64
  SimpleDemo_config = release_x64
endif

PROJECTS := SimpleFileWatcher SimpleDemo

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

SimpleFileWatcher:
ifneq (,$(SimpleFileWatcher_config))
	@echo "==== Building SimpleFileWatcher ($(SimpleFileWatcher_config)) ===="
	@${MAKE} --no-print-directory -C SimpleFileWatcher -f Makefile config=$(SimpleFileWatcher_config)
endif

SimpleDemo: SimpleFileWatcher
ifneq (,$(SimpleDemo_config))
	@echo "==== Building SimpleDemo ($(SimpleDemo_config)) ===="
	@${MAKE} --no-print-directory -C SimpleDemo -f Makefile config=$(SimpleDemo_config)
endif

clean:
	@${MAKE} --no-print-directory -C SimpleFileWatcher -f Makefile clean
	@${MAKE} --no-print-directory -C SimpleDemo -f Makefile clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_win32"
	@echo "  debug_x64"
	@echo "  release_win32"
	@echo "  release_x64"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   SimpleFileWatcher"
	@echo "   SimpleDemo"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"